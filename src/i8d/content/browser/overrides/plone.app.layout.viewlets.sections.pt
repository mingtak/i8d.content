<!-- Navbar -->
<tal:sections
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     tal:define="portal_tabs view/portal_tabs"
     tal:condition="portal_tabs"
     i18n:domain="i8d.content">
  <nav class="theme-nav" tal:condition="not:context/@@can_see_backend" style="z-index: 1000">
    <div class="container">
      <div class="nav-inner"> 
        <!-- mobile-menu 行動裝置選單 -->
        <div class="hidden-desktop" id="mobile-menu">
          <ul class="navmenu">
            <li>
              <div class="menutop">
                <div class="toggle"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span></div>
                <h2 i18n:translate="">Menu</h2>
              </div>
              <ul style="display:none" class="submenu">
                <li>
                  <ul class="topnav" tal:define="selected_tab python:view.selected_portal_tab">
<tal:tabs tal:repeat="tab portal_tabs">
                    <li tal:define="tid tab/id"
                        tal:attributes="id string:portaltab-${tid};
                                        class python:selected_tab==tid and 'level0 nav-1 level-top parent' or nothing">
                      <a class="level-top"
                         tal:attributes="href tab/url;
                                         title tab/description|nothing;
                                         target tab/link_target|nothing;">
                        <span tal:content="tab/name">Home</span>
                      </a>
                    </li>
</tal:tabs>
                  </ul>
                </li>
              </ul>
            </li>
          </ul>
          <!--navmenu--> 
        </div>
        <!--End mobile-menu --> 


        <!-- 正常選單 -->
        <a tal:define="portal context/portal_get"
           tal:attributes="href portal/absolute_url;
                           title portal/title" class="logo-small">
          <img tal:attributes="alt portal/absolute_url;
                               src string:${portal/absolute_url}/i8d_logo_white.png"></a>
        <ul id="nav" class="hidden-xs"
            tal:define="selected_tab python:view.selected_portal_tab;
                        brandShowInNav python:context.portal_registry['i8d.content.browser.coverSetting.ICoverSetting.brandShowInNav'];
                        providerShowInNav python:context.portal_registry['i8d.content.browser.coverSetting.ICoverSetting.providerShowInNav'];
                        productShowInNav python:context.portal_registry['i8d.content.browser.coverSetting.ICoverSetting.productShowInNav']">
<tal:tabs tal:repeat="tab portal_tabs">
          <li class="level0 nav-5 level-top first"
              tal:define="tid tab/id"
              tal:attributes="class python:'level0 nav-5 level-top %s' % (selected_tab==tid and 'active' or nothing)">
            <a class="level-top"  href="grid.html"
               tal:attributes="href tab/url;
                               title tab/description|nothing;
                               target tab/link_target|nothing;">
              <span tal:content="tab/name">Tab Name</span>
            </a>


            <div class="level0-wrapper dropdown-6col" tal:condition="python:tid in ['Brand', 'category']">
              <div class="level0-wrapper2">
                <div class="nav-block nav-block-center grid12-8 itemgrid itemgrid-4col"> 
                  <!--mega menu-->
                  <ul class="level3" tal:condition="python:tid == 'Brand'">
                    <li class="level3 nav-6-1 parent item" tal:repeat="uid python:brandShowInNav.split('\n')[1:5]">
    <tal:uid define="catalog python:context.portal_catalog;
                     brain python:catalog(UID=uid.strip())">
        <tal:repeat repeat="item brain">
                      <div class="cat-img"><img tal:attributes="src string:${item/getURL}/@@images/image; alt item/Title"/></div>
                      <a tal:attributes="href item/getURL; title item/Title"><span tal:content="item/Title">Title</span></a> 
        </tal:repeat>
    </tal:uid>
                      <!--sub sub category-->
<!--                      <ul class="level1">
                        <li class="level2 nav-6-1-1"> <a href="grid.html"><span>Samsung</span></a> </li>
                      </ul>
-->
                      <!--level1--> 
                      <!--sub sub category--> 
                    </li>
                    <!--level1 nav-6-1 parent item-->
                  </ul>

                  <ul class="level3" tal:condition="python:tid == 'category'">
                    <li class="level3 nav-6-1 parent item" tal:repeat="uid python:productShowInNav.split('\n')[1:5]">
    <tal:uid define="catalog python:context.portal_catalog;
                     brain python:catalog(UID=uid.strip())">
        <tal:repeat repeat="item brain">
                      <div class="cat-img"><img tal:attributes="src string:${item/getURL}/@@images/image; alt item/Title"/></div>
                      <a tal:attributes="href item/getURL; title item/Title"><span tal:content="item/Title">Title</span></a>
        </tal:repeat>
    </tal:uid>
                      <!--sub sub category-->
<!--                      <ul class="level1">
                        <li class="level2 nav-6-1-1"> <a href="grid.html"><span>Samsung</span></a> </li>
                      </ul>
-->
                      <!--level1-->
                      <!--sub sub category-->
                    </li>
                    <!--level1 nav-6-1 parent item-->
                  </ul>





                  <!--level0--> 
                </div>

                <!--nav-block nav-block-center-->
<tal:first define="uid python:brandShowInNav.split('\n')[0].strip();
                   catalog python:context.portal_catalog;
                   brain python:catalog(UID=uid);
                   item python:brain[0]"
           condition="python:tid == 'Brand'">
                <div class="nav-block nav-block-right std grid12-4">
                  <p><a tal:attributes="href item/getURL"><img tal:attributes="src string:${item/getURL}/@@images/image; alt item/Title" class="fade-on-hover"></a></p>
                  <h3 class="heading" tal:content="item/Title"></h3>
                  <p tal:content="item/Description"></p>
                  <p><a tal:attributes="title item/Title; href item/getURL" class="btn-button-st" i18n:translate="">To see all</a></p>
                </div>
</tal:first>

<tal:first define="uid python:productShowInNav.split('\n')[0].strip();
                   catalog python:context.portal_catalog;
                   brain python:catalog(UID=uid);
                   item python:brain[0]" 
           condition="python:tid == 'category'">
                <div class="nav-block nav-block-right std grid12-4">
                  <p><a tal:attributes="href item/getURL"><img tal:attributes="src string:${item/getURL}/@@images/image; alt item/Title" class="fade-on-hover"></a></p>
                  <h3 class="heading" tal:content="item/Title"></h3>
                  <p tal:content="item/Description"></p>
                  <p><a tal:attributes="title item/Title; href item/getURL" class="btn-button-st" i18n:translate="">To see all</a></p>
                </div>
</tal:first>


                <!--nav-block nav-block-right std grid12-4--> 
              </div>
            </div>
          </li>
</tal:tabs>
        </ul>


        <!-- 購物車 -->
          <metal:macro use-macro="context/mini_cart/macros/mini_cart" />
        <!-- end 購物車 -->


      </div>
    </div>
  </nav>
</tal:sections>
  <!-- end nav -->






<tal:check_anonymous condition="context/@@can_see_backend">
<!-- 後台選單 -->
<tal:sections
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     tal:define="portal_tabs view/portal_tabs"
     tal:condition="portal_tabs"
     i18n:domain="plone">



  <p class="hiddenStructure" i18n:translate="heading_sections">Navigation</p>
  <nav class="plone-navbar" id="portal-globalnav-wrapper" role="navigation">
    <div class="container">
      <div class="plone-navbar-header">
        <button type="button" class="plone-navbar-toggle" data-toggle="collapse" data-target="#portal-globalnav-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <div class="plone-collapse plone-navbar-collapse" id="portal-globalnav-collapse">
        <ul class="plone-nav plone-navbar-nav"
            id="portal-globalnav"
            tal:define="selected_tab python:view.selected_portal_tab">
            <tal:tabs tal:repeat="tab portal_tabs">
              <li tal:define="tid tab/id"
                  tal:attributes="id string:portaltab-${tid};
                                  class python:selected_tab==tid and 'selected' or nothing">
                  <a href=""
                     tal:content="tab/name"
                     tal:attributes="href tab/url;
                                     title tab/description|nothing;
                                     target tab/link_target|nothing;">
                    Tab Name
                  </a>
              </li>
            </tal:tabs>
        </ul>
      </div>
    </div>
  </nav>

</tal:sections>
</tal:check_anonymous>
