                                  </div>
                                  <!--actions-->
                                  <div class="clearfix"> </div>
                                </div>
                              </div>
                            </div>
                            <!-- End Item --> 
    </tal:repeat>
  </tal:brain>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

